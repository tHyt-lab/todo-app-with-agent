{
  "name": "todo-app",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "description": "A modern Todo application built with React + TypeScript + Vite",
  "keywords": [
    "todo",
    "react",
    "typescript",
    "vite",
    "material-ui",
    "tanstack-router"
  ],
  "homepage": "https://thyt-lab.github.io/todo-app-with-agent/",
  "repository": {
    "type": "git",
    "url": "https://github.com/thyt-lab/todo-app-with-agent.git"
  },
  "bugs": {
    "url": "https://github.com/thyt-lab/todo-app-with-agent/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:github": "tsc -b && vite build --mode production",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run check && npm run type-check && npm run test:run && npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.1.1",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@mui/system": "^7.1.1",
    "@mui/x-date-pickers": "^8.5.2",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-router": "^1.121.24",
    "@tanstack/router-devtools": "^1.121.33",
    "@tanstack/router-vite-plugin": "^1.121.27",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.18.1",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "jotai": "^2.12.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.1",
    "react-i18next": "^15.5.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@playwright/test": "^1.53.1",
    "@tanstack/react-query-devtools": "^5.80.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.53.1",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "npm run check:fix && npm run type-check && npm run test"
  }
}
